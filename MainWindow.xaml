<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        >
    <Window.Resources>
        <local:MapManager x:Key="mainMap">
        </local:MapManager>
    </Window.Resources>
    <Grid x:Name="mainGrid" x:FieldModifier="public">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" x:Name="tgMap" Margin="50,50,50,50" ShowGridLines="True"  x:FieldModifier="public">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="b0" Grid.Column="0" Grid.Row="0" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b1" Grid.Column="1" Grid.Row="0" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b2" Grid.Column="2" Grid.Row="0" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b3" Grid.Column="3" Grid.Row="0" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b4" Grid.Column="0" Grid.Row="1" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b5" Grid.Column="1" Grid.Row="1" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b6" Grid.Column="2" Grid.Row="1" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b7" Grid.Column="3" Grid.Row="1" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b8" Grid.Column="0" Grid.Row="2" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b9" Grid.Column="1" Grid.Row="2" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b10" Grid.Column="2" Grid.Row="2" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b11" Grid.Column="3" Grid.Row="2" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b12" Grid.Column="0" Grid.Row="3" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b13" Grid.Column="1" Grid.Row="3" Width="50" Height="50" Margin="10,10,10,10"/>
            <Button x:Name="b14" Grid.Column="2" Grid.Row="3" Width="50" Height="50" Margin="10,10,10,10"/>
            <Rectangle x:FieldModifier="public" x:Name="EmptyRect" Grid.Column="3" Grid.Row="3" Width="50" Height="50" Margin="10,10,10,10"/>
        </Grid>
        <Label x:Name="AttemptCounter" Grid.Column="1" Width="100" Height="50" VerticalAlignment="Top" BorderThickness="1.5" BorderBrush="Black"/>

    </Grid>
</Window>
